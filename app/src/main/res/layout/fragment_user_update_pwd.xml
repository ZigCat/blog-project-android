<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/editpwd"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".fragments.userpage.UserUpdatePwdFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/editpwd_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/istokweb_bold"
            android:gravity="center"
            android:text="@string/user_editpwd_title"
            android:textColor="@color/main_color"
            android:textSize="30sp" />

        <Button
            android:id="@+id/editinfo_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_weight="1"
            android:backgroundTint="@color/blue"
            android:fontFamily="@font/istokweb_bold"
            android:text="@string/user_editinfo_title"
            android:textColor="@color/white"
            android:textSize="20sp" />

    </LinearLayout>

    <EditText
        android:id="@+id/user_editpwd1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="@drawable/input_pole"
        android:ems="10"
        android:fontFamily="@font/istokweb_regular"
        android:hint="@string/user_editpwd_hint"
        android:inputType="textPassword"
        android:padding="12dp"
        android:textColor="@color/black"
        android:textColorHint="@color/semicolor_bg" />

    <EditText
        android:id="@+id/user_editpwd2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25dp"
        android:background="@drawable/input_pole"
        android:ems="10"
        android:fontFamily="@font/istokweb_regular"
        android:hint="@string/user_editpwd_confirm_hint"
        android:inputType="textPassword"
        android:padding="12dp"
        android:textColor="@color/black"
        android:textColorHint="@color/semicolor_bg" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/editpwd_cancel"
            android:layout_width="10dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:backgroundTint="@color/blue"
            android:fontFamily="@font/istokweb_bold"
            android:text="@string/editinfo_cancel"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <Button
            android:id="@+id/editpwd_apply"
            android:layout_width="10dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/blue"
            android:fontFamily="@font/istokweb_bold"
            android:text="@string/editinfo_apply"
            android:textColor="@color/white"
            android:textSize="20sp" />
    </LinearLayout>

</LinearLayout>